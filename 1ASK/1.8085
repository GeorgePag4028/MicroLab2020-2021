LXI B,03E8H ;BC=1000 IN ORDER TO HAVE 1 SEC DELAY
MVI E,FFH ; TO START FORM 0 IN EVERY LOOP


START:
LDA 2000H ;A=(2000) TAKE THE INPUT
ANI 0FH ; ONLY USE 4 LSB
JZ START
MOV D,A ; D=4LSB

UP:
LDA 2000H ; STOP THE COUNTER IF THE MSB OFF
ANI 80H
JZ UP

INR E ; INR THE COUNTER 
MOV A,E
CALL DELB ; DELAY 1 SEC
CMA
STA 3000H ; DISPLAY
CMA
CMP D ; IF YOU HAVE REACHED THE 4LSB START TO DECREASE 
		; THE COUNTER, ELSE INR THE COUNTER UNTIL YOU 
		;REACHED 4LSB
JNZ UP

DOWN:
LDA 2000H ; STOP THE COUNTER IF THE MSB OFF
ANI 80H
JZ DOWN

DCR E ; DCR THE COUNTER
MOV A,E
CALL DELB 
CMA
STA 3000H ; DISPLAY THE COUNTER 
CMA
CPI 00H ; UNTIL REACH ZERO
JNZ DOWN
JMP START 
END